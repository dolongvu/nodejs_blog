<div class="mt-4">

  <h1>Cập nhật khóa học khóa học</h1>
  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
      value="{{course.name}}"
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Tên khóa học"
      />

    </div>
     <div class="form-group">
      <label>Mô tả</label>

      <textarea   id="description" class="form-control"
        name="description">{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
       value="{{course.level}}"
        type="text"
        class="form-control"
        id="level"
        name="level"
        placeholder="Mô tả khóa học"
      />
    </div>
   
    <div class="form-group">
      <label for="videoId">Video</label>
      <input
       value="{{course.videoId}}"
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        placeholder="videoId"
      />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

</div>