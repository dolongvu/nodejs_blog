<div class="mt-4">

  <h1>Đăng khóa học</h1>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Tên khóa học"
      />

    </div>
     <div class="form-group">
      <label for="">Mô tả</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        placeholder="Mô tả khóa học"
      />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        placeholder="Mô tả khóa học"
      />
    </div>
   
    <div class="form-group">
      <label for="videoId">Video</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        placeholder="videoId"
      />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

</div>